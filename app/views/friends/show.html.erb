<div class="bg-secondary-subtle rounded p-5">
  <div class="d-flex flex-row gap-2 fs-1">
  <p>
    <%= @friend.first_name %>
  </p>

  <p>
    <%= @friend.last_name %>
  </p>

  </div>
  <div class="d-flex flex-row gap-2 mb-3">

  <p>
    <%= @friend.email %>
  </p>|
  <p>
    <%= @friend.phone %>
  </p>|

  <p>
    <%= @friend.twitter %>
  </p>
  
  </div>
  <%= link_to 'Edit', edit_friend_path(@friend), class: "btn btn-secondary" %>
  <%= link_to 'Delete', @friend, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
  <%= link_to 'Back', friends_path,  class: "btn btn-dark" %>
</div>
